{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"      
    ],
    "outDir": "./dist/",      
    "module": "esnext",
    "moduleResolution": "node",
    // "resolveJsonModule": true,
    // "isolatedModules": true,    
    "target": "es5",
    "jsx": "react-jsx",
    "sourceMap": true,
    "allowJs": true,
    //"skipLibCheck": true,
    //"esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // "strict": true,
    // "forceConsistentCasingInFileNames": true,    
    // "noEmit": true,    
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,    
  },
  "include": [
    "src"
  ]
}