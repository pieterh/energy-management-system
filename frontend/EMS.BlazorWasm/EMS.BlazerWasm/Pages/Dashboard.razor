@page "/dashboard"

<style>
    .bullet {
        display: inline-block;
        margin: 0 2px;
        transform: scale(0.8);
    }
</style>

<PageTitle>Dashboard</PageTitle>

<h1>Dashboard</h1>

<MudGrid>
    <MudItem xs="12">
        <MudGrid Justify="Justify.FlexStart">
            <MudItem xs="3">
                <MudCard>
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">1</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardContent>
                        <MudText Typo="Typo.body1">
                            Word of the Day
                         </MudText>
                        <MudText Typo="Typo.h5" Style="font-size:1.5rem">
                            be@(bull)nev@(bull)o@(bull)lent
                        </MudText>
                        <MudText Typo="Typo.body1">
                            adjective
                        </MudText>
                        <MudText Typo="Typo.body2">
                            well meaning and kindly.
                            <br />
                            "a benevolent smile"
                        </MudText>
                    </MudCardContent>
                </MudCard>
            </MudItem>
            <MudItem xs="3">
                <MudPaper Class="d-flex flex-column align-center justify-center mud-width-full py-8">
                </MudPaper>
            </MudItem>
            <MudItem xs="3">
                <MudPaper Class="d-flex flex-column align-center justify-center mud-width-full py-8">
                </MudPaper>
            </MudItem>
            <MudItem xs="3">
                <MudPaper Class="d-flex flex-column align-center justify-center mud-width-full py-8">
                </MudPaper>
            </MudItem>
            <MudItem xs="3">
                <MudPaper Class="d-flex flex-column align-center justify-center mud-width-full py-8">
                </MudPaper>
            </MudItem>
            <MudItem xs="3">
                <MudPaper Class="d-flex flex-column align-center justify-center mud-width-full py-8">
                </MudPaper>
            </MudItem>
        </MudGrid>
    </MudItem>
</MudGrid>

@code{
    MarkupString bull = new MarkupString("<span class='bullet'>•</span>");
}
