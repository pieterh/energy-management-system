{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "adapters": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [ "chargepoint", "smartmeter", "priceprovider" ]
            },
            "name": {
              "type": "string"
            },
            "driver": {
              "type": "object",
              "properties": {
                "assembly": {
                  "type": "string"
                },
                "type": {
                  "type": "string"
                }
              },
              "required": [
                "assembly",
                "type"
              ]
            }
          },
          "required": [
            "id",
            "type",
            "name",
            "driver"
          ]
        }
      ]
    },
    "instances": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "enabled": {
              "type": "boolean"
            },
            "adapterid": {
              "type": "string"
            },
            "config": {
              "type": "object"
            }
          },
          "required": [
            "id",
            "name",
            "enabled",
            "adapterid",
            "config"
          ]
        }
      ]
    },
    "web": {
      "type": "object",
      "properties": {
        "ContentRootPath": { "type": "string" },
        "WebRootPath": { "type": "string" },
        "jwt": {
          "type": "object",
          "properties": {
            "issuer": { "type": "string" },
            "audience": { "type": "string" },
            "expiration": { "type": "number" },
            "clockskew": { "type": "number" }
          },
          "required": [
            "issuer",
            "audience",
            "expiration",
            "clockskew"
          ]
        }
      },
      "required": [
        "ContentRootPath",
        "WebRootPath",
        "jwt"
      ]
    },
    "Kestrel": {
      "type": "object",
      "properties": {
        "EndPoints": {
          "type": "object",
          "properties": {
            "Http": {
              "type": "object",
              "properties": {
                "Url": { "type": "string" }
              },
              "required": [
                "Url"
              ]
            }
          }
        }
      },
      "required": [
        "EndPoints"
      ]
    },
    "db": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [ "sqlite" ]
        },
        "name": { "type": "string" }
      },
      "required": [
        "type",
        "name"
      ]
    }
  },
  "required": [
    "adapters",
    "instances",
    "web"
  ]
}