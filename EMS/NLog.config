<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <targets>
        <target name="logfile" xsi:type="File" fileName="logging.log" layout="${longdate}|${threadid:padding=3}|${level:uppercase=true:padding=5}|${logger}|${message}${exception:format=tostring}"/>
        <target name="logconsole" xsi:type="Console" layout="${longdate}|${threadid:padding=3}|${level:uppercase=true:padding=5:truncate=5}|${logger}|${message}${exception:format=tostring}"/>
        <target name="p1streamt" xsi:type="File" fileName="p1stream.log" layout="${longdate}|${threadid:padding=3}|${level:uppercase=true:padding=5}|${logger}|${message}${exception:format=tostring}"/>
        <target name="p1messagest" xsi:type="File" fileName="p1messages.log" layout="${longdate}|${threadid:padding=3}|${level:uppercase=true:padding=5}|${logger}|${message}${exception:format=tostring}"/>
    </targets>

    <rules>
        <logger name="p1stream" minlevel="Info" writeTo="p1streamt" final="true"/>
        <logger name="p1messages" minlevel="Debug" writeTo="p1messagest" final="true"/>

        <logger name="*" minlevel="Info" writeTo="logconsole" />
        <logger name="*" minlevel="Debug" writeTo="logfile" />
    </rules>
</nlog>
